
#include <iostream>
#include <windows.h>
int main() {
    int h=10, c[]={12,14,10,13,11,9};
    for(int f=0;f<5;f++){
        system("cls");
        for(int i=0;i<h;i++){
            std::cout<<std::string(h-i-1,' ');
            for(int j=0;j<2*i+1;j++){
                SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE),j%3?2:c[(i+j+f)%6]);
                std::cout<<(j%3?'*':'o');
            }
            std::cout<<'\n';
        }
        Sleep(300);
    }
}
```


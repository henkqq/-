#include <iostream>
using namespace std;

#include <windows.h>
int main() {
    setlocale(0, "");
   while(true){
       int h = 10, c[] = { 12,14,10,13,11,9 };
       for (int f = 0; f < 5; f++) {
           system("cls");
           SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 14);
           cout << std::string(h - 1, ' ') << "*\n";
           for (int i = 0; i < h; i++) {
              cout << string(h - i - 1, ' ');
               for (int j = 0; j < 2 * i + 1; j++) {
                   SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), j % 3 ? 2 : c[(i + j + f) % 6]);
                   cout << (j % 3 ? '*' : 'o');
               }
               cout << '\n';
           }
           SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 6);
           cout << string(h - 1, ' ') << "#\n";
           Sleep(300);
           
    }
    }
    return 0;
}

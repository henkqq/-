#include <iostream>
using namespace std;

int main() {
setlocale(0, "");
    int number;

    cout << "[ + ] Цикл \"WHILE\"" << endl;
    while (true) {
        cout << "[ + ] Введите число: ";
        cin >> number;


        if (number == 0) {
            cout << "[ + ] Программа завершена." << endl;
            break;
        }

        if (number < 1 || number > 15) {
            cout << "[ ! ] Ошибка: введите число от 1 до 15." << endl;
            continue;
        }
        int count = 1;
        while (count <= number) {
            count << "[ + ] Цикл отработал. Круг: " << count << "." << endl;
            count++;
        }
    }

    return 0;
}
